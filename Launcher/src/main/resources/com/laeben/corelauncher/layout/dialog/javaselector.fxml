<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxUnresolvedStyleClassReference -->
<?import com.laeben.corelauncher.ui.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="300.0" prefWidth="650.0" fx:id="root" stylesheets="@../../style/controls/jselector.css">

    <GridPane AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50" alignment="CENTER" VBox.vgrow="ALWAYS" maxHeight="Infinity" maxWidth="Infinity" hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints maxWidth="200" hgrow="ALWAYS" halignment="RIGHT"/>
            <ColumnConstraints/>
        </columnConstraints>

        <Label fx:id="lblName" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Custom Name:"/>
        <CField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Source:"/>
        <HBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <RadioButton fx:id="rbLocal" text="From File System"/>
            <RadioButton fx:id="rbNetwork" text="From Network"/>
        </HBox>

        <Label styleClass="group-network" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Major Version:"/>
        <Spinner styleClass="group-network" editable="true" fx:id="spnMajor" prefWidth="80" maxWidth="80" min="8" max="30" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label styleClass="group-local" text="Path:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <HBox alignment="CENTER" styleClass="group-local" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="txtPath" editable="false"/>
            <CButton styleClass="transparent" fx:id="btnSelect" text="..."/>
        </HBox>

    </GridPane>

    <CButton AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" prefWidth="56" prefHeight="56" fx:id="btnClose" styleClass="transparent" text="X"/>
    <HBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <CWorker fx:id="worker"/>
        <CButton fx:id="btnApply" text="%option.apply" styleClass="transparent"/>
    </HBox>
</AnchorPane>
