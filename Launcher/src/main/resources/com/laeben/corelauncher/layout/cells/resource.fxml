<?xml version="1.0" encoding="UTF-8"?>

<?import com.laeben.corelauncher.ui.control.CButton?>
<?import com.laeben.corelauncher.ui.control.CView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" prefHeight="175" fx:id="root" alignment="CENTER" stylesheets="@../../style/cells/resource.css">
    <CView fitWidth="72" fitHeight="72" fx:id="icon"/>
    <VBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="lblName"/>
            <HBox fx:id="badges" spacing="6" alignment="CENTER_LEFT">

            </HBox>
        </HBox>
        <Rectangle height="3"/>
        <Label fx:id="lblAuthor"/>
        <Rectangle height="5"/>
        <TextArea fx:id="txtDesc" editable="false"/>
        <Rectangle height="10"/>
        <Label fx:id="lblCategory"/>
    </VBox>
    <Region HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <CButton fx:id="btnMore" styleClass="transparent" text="..." />
    <CButton fx:id="btnInstall" styleClass="transparent" text="+" />
</HBox>
